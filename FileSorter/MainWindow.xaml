<Window x:Class="FileSorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSorter"
        mc:Ignorable="d"
        Title="FileSorter" Height="450" Width="800">

    <Border Padding="5">
        <Grid Visibility="Visible" Focusable="True" KeyDown="TestImage">
            <StackPanel>
                <StackPanel Height="300" Margin="5">
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center"
                 Name="Image1" Stretch="Uniform" Height="296"/>
                </StackPanel>
                <StackPanel Height="90" Margin="5">
                    <Button Height="30" Width="90" Click="OpenToPathUpOnClick" Margin="0,30,0,0"/>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>

</Window>


